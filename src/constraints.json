{
  "firstName": {
    "presence": {
      "allowEmpty": false
    }
  },

  "lastName": {
    "presence": {
      "allowEmpty": false
    }
  },

  "username": {
    "length": {
      "minimum": 2,
      "maximum": 20
    },

    "presence": {
      "allowEmpty": false
    }
  },

  "emailAddress": {
    "email": {
      "message": "^E-mail address is invalid"
    },

    "presence": {
      "allowEmpty": false
    }
  },

  "password": {
    "length": {
      "minimum": 6
    },

    "presence": {
      "allowEmpty": false
    }
  },

  "passwordConfirmation": {
    "equality": "password",

    "length": {
      "minimum": 6
    },

    "presence": {
      "allowEmpty": false
    }
  }
}