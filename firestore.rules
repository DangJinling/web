service cloud.firestore {
	function isAuthenticated() {
  	return request.auth.uid != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function hasRole(role) {
  	return role in request.auth.token.roles;
  }

  function isAdmin() {
  	return hasRole('admin');
  }

  function isPremium() {
  	return hasRole('premium');
  }

  function isAuthorized(userId) {
    return isOwner(userId) || isAdmin();
  }

  match /databases/{database}/documents {
    match /users/{userId} {
      allow get: if isAuthenticated();
      allow list: if isAuthenticated() && isAdmin();
    }

    match /users/{userId} {
      allow create: if isAuthenticated() && isAuthorized(userId);
      allow update: if isAuthenticated() && isAuthorized(userId);
      allow delete: if isAuthenticated() && isAuthorized(userId);
    }
  }
}
