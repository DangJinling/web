service cloud.firestore {
  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function hasRole(role) {
  	return role in request.auth.token.roles;
  }

  function isAdmin() {
  	return hasRole('admin');
  }

  function isPremium() {
  	return hasRole('premium');
  }

  function isAuthorized(userId) {
    return (request.auth.uid != null && (isOwner(userId) || isAdmin()));
  }

  match /databases/{database}/documents {
    match /users/{userId} {
      allow get: if request.auth.uid != null;

      allow list: if request.auth.uid != null;

      allow create: if isAuthorized(userId);

      allow update: if isAuthorized(userId);

      allow delete: if isAuthorized(userId);
    }
  }
}
